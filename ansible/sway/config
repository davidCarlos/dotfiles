set $up k
set $down j
set $left h
set $right l
set $terminal alacritty
set $browser firefox
set $notes joplin

# ======= BINDS ========= #

bindsym Mod4+Shift+l exec swaylock
bindsym Mod4+Shift+e exec $i3exit

# Yazi is a TUI based file manager -> 
# gio binary enables to run .desktop files from the command line
bindsym Mod4+Shift+f exec "gio launch ~/.local/share/applications/yazi.desktop"

bindsym Mod4+Shift+p exec flameshot gui

# move workspace to monitor
bindsym Mod4+Shift+m move workspace to output left

#decrease brightness
bindsym Mod4+Shift+x exec brightnessctl s 10%-
#increase brightness
bindsym Mod4+Shift+z exec brightnessctl s +10%

# kill focused window
bindsym Mod4+Shift+q kill
bindsym Mod4+Return exec "rofi -show-icons -show drun"

# change focus
bindsym Mod4+$left focus left
bindsym Mod4+$down focus down
bindsym Mod4+$up focus up
bindsym Mod4+$right focus right

# alternatively, you can use the cursor keys:
bindsym Mod4+Left focus left
bindsym Mod4+Down focus down
bindsym Mod4+Up focus up
bindsym Mod4+Right focus right

# alternatively, you can use the cursor keys:
bindsym Mod4+Shift+Left move left
bindsym Mod4+Shift+Down move down
bindsym Mod4+Shift+Up move up
bindsym Mod4+Shift+Right move right


# Move next workspace
bindsym Mod4+n workspace next
bindsym Mod4+m workspace prev

# split in horizontal orientation
bindsym Mod4+v split horizontal

# split in vertical orientation
bindsym Mod4+p split vertical

# enter fullscreen mode for the focused container
bindsym Mod4+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym Mod4+s layout stacking
bindsym Mod4+w layout tabbed
bindsym Mod4+e layout toggle split

# toggle tiling / floating
bindsym Mod4+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym Mod4+space focus mode_toggle

bindsym Mod4+Shift+minus move scratchpad
bindsym Mod4+minus scratchpad show

# switch to workspace
bindsym Mod4+1 workspace code
bindsym Mod4+2 workspace web
bindsym Mod4+3 workspace notes
bindsym Mod4+4 workspace chats
bindsym Mod4+5 workspace utils
bindsym Mod4+6 workspace 6
bindsym Mod4+7 workspace 7
bindsym Mod4+8 workspace 8
bindsym Mod4+9 workspace 9

bindsym Mod4+Shift+1 move container to workspace code
bindsym Mod4+Shift+2 move container to workspace web
bindsym Mod4+Shift+3 move container to workspace notes
bindsym Mod4+Shift+4 move container to workspace chats
bindsym Mod4+Shift+5 move container to workspace utils
bindsym Mod4+Shift+6 move container to workspace 6
bindsym Mod4+Shift+7 move container to workspace 7
bindsym Mod4+Shift+8 move container to workspace 8
bindsym Mod4+Shift+9 move container to workspace 9


# workspace ï‰©  output HDMI1
bindsym Mod4+Shift+c reload
bindsym Mod4+Shift+r restart

bindsym Mod4+r mode "resize"

# ======= WINDOW PLACEMENT ========= #

for_window [app_id="flameshot"] border pixel 2, floating enable, fullscreen disable, move absolute position 0 0
for_window [app_id="blueman-manager"] border pixel 2, floating enable, fullscreen disable, resize 400 400
for_window [app_id="org.gnome.Calculator"] border pixel 2, floating enable, fullscreen disable, resize 300 400
for_window [app_id="org.pulseaudio.pavucontrol"] border pixel 2, floating enable, fullscreen disable, resize 50 50
for_window [app_id="com.obsproject.Studio"] border pixel 2, floating enable, fullscreen disable, resize 400 400
for_window [app_id="it.mijorus.smile"] border pixel 2, floating enable, fullscreen disable, resize 80 80

# For this to work, we need to create an nmtui.desktop file in the ~/.local/share/applications folder.
# This file must have an Exec rule with the command: alacritty --class nmtui -e "nmtui"
for_window [app_id="nmtui"] border pixel 2, floating enable, fullscreen disable, resize 80 80

# For this to work, we need to create an yazi.desktop file in the ~/.local/share/applications folder.
# This file must have an Exec rule with the command: alacritty --class yazi -e "yazi"
for_window [app_id="yazi"] border pixel 2, floating enable, fullscreen disable, resize 160 160

# For this to work, we need to create an chatgpt.desktop file in the ~/.local/share/applications folder.
# This file must have an Exec rule with the command: firefox --class=chatgpt --new-window www.chatgpt.com
for_window [app_id="chatgpt"] border pixel 0, floating enable, fullscreen disable, resize 80 80
assign [app_id="org.mozilla.firefox"] web
assign [app_id="Alacritty"] code


# ======= OTHERS ========= #

# use Mouse+Mod4 to drag floating windows to their wanted position
floating_modifier Mod4
focus_follows_mouse no
workspace_auto_back_and_forth yes
title_align center
default_border pixel 2px
gaps inner 8px
gaps outer 0px
font pango:Adwaita Sans Regular 10

mode "resize" {
        bindsym $left       resize shrink width 5 px or 5 ppt
        bindsym $down       resize grow height 5 px or 5 ppt
        bindsym $up         resize shrink height 5 px or 5 ppt
        bindsym $right      resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 5 px or 5 ppt
        bindsym Down        resize grow height 5 px or 5 ppt
        bindsym Up          resize shrink height 5 px or 5 ppt
        bindsym Right       resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


# ======= BORDERS ========= #

set $focused_text #eee8d5
set $focused_background #1a1b26
set $focused_child_border #eee8d5
set $focused_indicator #eee8d5
set $focused_child_indicator #333847
set $focused_border #eee8d5

set $unfocused_text #0f0f0f
set $unfocused_background #414658
set $unfocused_indicator #3B3C52
set $unfocused_child_border #3B3C52
set $unfocused_border #1a1b26

set $transparent #0017202A

# class                 border  backgr. text    indicator child_border
client.focused          $focused_border    $focused_background        $focused_text           $focused_indicator   $focused_child_border
client.focused_inactive $unfocused_border     $unfocused_background             $unfocused_text         $unfocused_indicator            $unfocused_child_border
client.unfocused        $unfocused_border     $unfocused_background             $unfocused_text         $unfocused_indicator            $unfocused_border
client.placeholder      $unfocused_border     $unfocused_background             $unfocused_text         $unfocused_indicator            $unfocused_border

# ======= KEYBOARD ========= #

input "type:keyboard" {
    xkb_layout br
    xkb_variant ,nodeadkeys
    xkb_options grp:alt_shift_toggle
}

# ======= COMMANDS ========= #

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP=sway
exec systemctl --user restart xdg-desktop-portal
exec systemctl --user restart xdg-desktop-portal-wlr
exec systemctl --user restart xdg-desktop-portal-gtk

exec --no-startup-id waybar 
exec swaybg -i ~/.config/sway/wallpaper.jpg
exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet
exec $terminal
exec $browser
