# Autenticação pela chave gpg ainda não está funfando direito.
source ~/.gpgrc
source ~/.mutt/mail_aliases
source ~/.mutt/sidebar

auto_view text/html
set editor = vim
set my_name = 'David Carlos'
set mail_check = 90
set timeout = 15
set record="~/Documentos/.Mail/ddavidcarlos1392@gmail.com/Sent"
# set record=""
set folder = /home/david/Documentos/.Mail/ddavidcarlos1392@gmail.com/
set imap_user = 'ddavidcarlos1392'
set smtp_url = "smtp://ddavidcarlos1392@smtp.gmail.com:587/
set from = ddavidcarlos1392@gmail.com
set realname = 'David Carlos'
set signature = '~/.mutt/signature'

set spoolfile=+inbox

mailboxes +inbox +bak.e-mails_enviados  +bak.importante +Sent
unset imap_passive
set imap_keepalive = 300

set header_cache = ~/.cache/mutt
set message_cachedir = ~/.cache/mutt
set send_charset = "us-ascii:utf-8"
alternative_order text/plain text/html

set date_format="%y-%m-%d %T"
set index_format="%2C | %Z [%d] %-30.30F (%-4.4c) %s"

folder-hook inbox set sort=date-received
folder-hook sent set sort=date-received

##Pressing Control-b will allow browse and open the URLs in the currently selected message
macro index,pager \cb "<pipe-message> urlscan<Enter>" "call urlscan to extract URLs out of a message
macro attach,compose \cb "<pipe-entry> urlscan<Enter>" "call urlscan to extract URLs out of a message

ignore *                                # ignore all headers
unignore from: to: cc: date: subject:   # show only these
unhdr_order *                           # some distros order things by default
hdr_order from: to: cc: date: subject:  # and in this order

set date_format = "%d/%m"
set index_format = "[%Z]  %D  %-20.20F  %s"

bind index,pager <down>   sidebar-next
bind index,pager <up>     sidebar-prev
bind index,pager <right>  sidebar-open

set sidebar_delim   = '  │'
set sidebar_visible = yes
set sidebar_width   = 24
color sidebar_new color221 color233
color status color221 default
color indicator white color235
color tree color221 default

bind index <tab>    sync-mailbox
bind index <space>  collapse-thread

# Pager View Options ---------------------------------
set pager_index_lines = 10 # number of index lines to show
set pager_context = 3      # number of context lines to show
set pager_stop             # don't go to next message automatically
set menu_scroll            # scroll in menus
set tilde                  # show tildes like in vim
unset markers              # no ugly plus signs

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
alternative_order text/plain text/enriched text/html

set pgp_use_gpg_agent = yes
set pgp_sign_as = C2C66F72
set pgp_timeout = 3600
set crypt_autosign = yes
set crypt_replyencrypt = yes
set pgp_good_sign="^gpg: Good signature from"
set crypt_verify_sig=yes
