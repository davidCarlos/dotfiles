# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#
# This config file uses keycodes (bindsym) and was written for the QWERTY
# layout.
#
# To get a config file with the same key positions, but for your current
# layout, use the i3-config-wizard
#

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.

# https://github.com/supermarin/YosemiteSanFranciscoFont

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
# font pango:DejaVu Sans Mono 9

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesn’t scale on retina/hidpi displays.

# use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient

set $up k
set $down j
set $left h
set $right l
set $terminal urxvt

set $i3lock /home/david/projetos/i3-extras/i3lock-wrapper
set $i3exit /home/david/projetos/i3-extras/i3-exit

bindsym Mod4+Shift+e exec $i3exit
bindsym Mod4+Shift+p exec pavucontrol
bindsym Mod4+Shift+n exec wicd-gtk
bindsym Mod4+Shift+f exec $terminal -name ranger -e ranger
bindsym Mod4+o exec $i3lock

# use Mouse+Mod4 to drag floating windows to their wanted position
floating_modifier Mod4

focus_follows_mouse no
workspace_auto_back_and_forth yes
font pango:Roboto, Bold 9

# start a terminal
#bindsym Mod4+Return exec i3-sensible-terminal
bindsym Mod4+Return exec $terminal


# start a terminal in float mode
bindsym Mod4+i exec $terminal -name float-term

#
# Configure touchpad. Pass this to a definitive config file.
exec --no-startup-id synclient TapButton1=1 TapButton2=3 TapButton3=2 VertEdgeScroll=0

assign [title="^code$"] code
assign [class="^Google-chrome$" instance="^google-chrome$"] web
assign [class="^TelegramDesktop$" instance="^Telegram$"]  telegram
assign [title="^mutt$"] mail
assign [title="^google-sync$"] mail
assign [instance="^calibre-gui$" class="^libprs500$"] web

for_window [class="Nitrogen"] floating enable
for_window [instance="^pavucontrol$" class="^Pavucontrol$"] floating enable
for_window [instance="^eog$" class="^Eog$"] floating enable
for_window [instance="^thunar$" class="^Thunar$"] floating enable
for_window [instance="^lxappearance$" class="^Lxappearance$"] floating enable
for_window [instance="^wicd-client.py$" class="^Wicd-client.py$"] floating enable
for_window [title="^google-sync$"]  floating enable
for_window [title="^float-term$"]  floating enable
for_window [title="^google-sync$"]  floating enable
for_window [title="^ranger$"]  floating enable
# for_window [title="^mutt$"] floating enable
# for_window [class="^TelegramDesktop$" instance="^Telegram$"]  floating enable

bindsym Mod4+q mode "$home_monitor"

# Control brightness according with time of day
# exec --no-startup-id redshift
exec --no-startup-id megasync
exec --no-startup-id compton --config ~/.compton.conf
exec --no-startup-id volumeicon
exec --no-startup-id nitrogen --restore
exec --no-startup-id polybar -c /home/david/.config/polybar/config example

mode "$home_monitor" {

bindsym Mod4+d exec rofi -show run -fg "#FFFFFF" -bg "#14121b" -hlfg "#FFFFFF" -hlbg "#02813d" -bgalt "#14121b"  -lines 6 -font "Hack 10" -hide-scrollbar -separator-style "none" -line-margin 7 -padding 100 -width 100 -opacity "75"

bindsym Mod4+x exec rofi  -show window  -fg "#FFFFFF" -bg "#14121b" -hlfg "#FFFFFF" -hlbg "#02813d" -bgalt "#14121b" -o 85 -lines 6 -font "Hack 10" -hide-scrollbar -separator-style "none" -line-margin 7 -padding 100 -width 100

bindsym Mod4+q mode "default"

}


#To use  icon, install fonts-font-awesome package

exec --no-startup-id $terminal -title code
exec --no-startup-id google-chrome

# kill focused window
bindsym Mod4+Shift+q kill

# start dmenu (a program launcher)
bindsym Mod4+d exec rofi -show run -fg "#FFFFFF" -bg "#14121b" -hlfg "#FFFFFF" -hlbg "#02813d" -bgalt "#14121b" -lines 6 -font "Hack 10" -hide-scrollbar -opacity "85" -separator-style "none" -line-margin 7 -padding 340 -width 100

bindsym Mod4+x exec rofi  -show window  -fg "#FFFFFF" -bg "#14121b" -hlfg "#FFFFFF" -hlbg "#02813d" -bgalt "#14121b" -lines 6 -font "Hack 10" -hide-scrollbar -opacity "85" -separator-style "none" -line-margin 7 -padding 340 -width 100

workspace_layout default

new_window pixel 3

# gaps inner 6
# gaps outer 2

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym Mod4+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym Mod4+$left focus left
bindsym Mod4+$down focus down
bindsym Mod4+$up focus up
bindsym Mod4+$right focus right

# alternatively, you can use the cursor keys:
bindsym Mod4+Left focus left
bindsym Mod4+Down focus down
bindsym Mod4+Up focus up
bindsym Mod4+Right focus right

# move focused window
bindsym Mod4+Shift+$left move left
bindsym Mod4+Shift+$down move down
bindsym Mod4+Shift+$up move up
bindsym Mod4+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym Mod4+Shift+Left move left
bindsym Mod4+Shift+Down move down
bindsym Mod4+Shift+Up move up
bindsym Mod4+Shift+Right move right


# Move next workspace
bindsym Mod4+n workspace next
bindsym Mod4+m workspace prev

# split in horizontal orientation
bindsym Mod4+v split horizontal

# split in vertical orientation
bindsym Mod4+p split vertical

# enter fullscreen mode for the focused container
bindsym Mod4+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym Mod4+s layout stacking
bindsym Mod4+w layout tabbed
bindsym Mod4+e layout toggle split

# toggle tiling / floating
bindsym Mod4+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym Mod4+space focus mode_toggle

# focus the parent container
bindsym Mod4+a focus parent

# focus the child container
#bindsym Mod4+d focus child

# move the currently focused window to the scratchpad
bindsym Mod4+Shift+minus move scratchpad

# If there are multiple scratchpad windows, this command cycles through them.
bindsym Mod4+minus scratchpad show

# switch to workspace
bindsym Mod4+1 workspace code
bindsym Mod4+2 workspace web
bindsym Mod4+3 workspace telegram
bindsym Mod4+4 workspace mail
bindsym Mod4+5 workspace other
bindsym Mod4+6 workspace 6
bindsym Mod4+7 workspace 7
bindsym Mod4+8 workspace 8
bindsym Mod4+9 workspace 9
bindsym Mod4+0 workspace 10

bindsym Mod4+Shift+1 move container to workspace code
bindsym Mod4+Shift+2 move container to workspace web
bindsym Mod4+Shift+3 move container to workspace telegram
bindsym Mod4+Shift+4 move container to workspace mail
bindsym Mod4+Shift+5 move container to workspace other
bindsym Mod4+Shift+6 move container to workspace 6
bindsym Mod4+Shift+7 move container to workspace 7
bindsym Mod4+Shift+8 move container to workspace 8
bindsym Mod4+Shift+9 move container to workspace 9
bindsym Mod4+Shift+0 move container to workspace 10


# workspace   output HDMI1
bindsym Mod4+Shift+c reload
bindsym Mod4+Shift+r restart

mode "resize" {
        bindsym $left       resize shrink width 5 px or 5 ppt
        bindsym $down       resize grow height 5 px or 5 ppt
        bindsym $up         resize shrink height 5 px or 5 ppt
        bindsym $right      resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 5 px or 5 ppt
        bindsym Down        resize grow height 5 px or 5 ppt
        bindsym Up          resize shrink height 5 px or 5 ppt
        bindsym Right       resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym Mod4+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

set $focused_client #b8b8b8
set $focused_text #b8b8b8
set $focused_background #282828
set $focused_border $focused_client
set $unfocused_text #007399
set $unfocused_workspace #007399
set $unfocused_client  #007399
set $unfocused_text #007399
set $unfocused_border #181818

client.focused          $focused_border    $focused_background    $focused_text           $focused_client   $focused_client
client.unfocused        $unfocused_border  $unfocused_border      $unfocused_text         $darkblue         $unfocused_border
client.placeholder      $unfocused_border  $unfocused_border      $unfocused_text         $darkblue         $unfocused_border
client.urgent           $unfocused_border  $unfocused_border      $unfocused_text         $darkblue         $unfocused_border

set_from_resource $darkwhite   color7  #ffffff
set_from_resource $black   color6  #000000
set_from_resource $red   color5  #ff8080
set $transparent #0017202A

